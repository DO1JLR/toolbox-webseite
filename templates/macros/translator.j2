{#- text -> key in databag,
   bag_name -> name of databag,
   language -> language to translate to,
   fallback -> fallback language when translation is not available
#}
{%- macro translator(text, language, fallback='de') %}
  {%- if bag('translate', language, text) -%}
    {{ bag('translate', language, text) }}
  {%- elif bag('translate', fallback, text) -%}
    {{ bag('translate', fallback, text) }}
  {%- else -%}
    {{ text }}
  {%- endif %}
{%- endmacro %}
